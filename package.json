{
    "name": "ton-lend",
    "version": "0.1.0",
    "description": "Package for operating TON-Lend smart contract system",
    "main": "index.js",
    "dependencies": {
        "locklift": "^1.4.4",
        "tondev": "^0.9.0"
    },
    "devDependencies": {},
    "scripts": {
        "test": "mocha",

        "setup": "npm install && npm install -g tondev && tondev sol set -c 0.47.0 -s 0.47.0 && mkdir build && mkdir deployed",

        "build-sc": "node scripts/utils/build-sc.js",

        "deploy:wallet": "node scripts/contracts/wallet/scripts/deploy-multisig-wallet.js",
        "deploy:market": "node scripts/contracts/marketAggregator/scripts/deploy-market.js",
        "deploy:market-modules": "node scripts/contracts/marketModules/scripts/deploy-modules.js",
        "deploy:oracle": "node scripts/contracts/oracle/scripts/deploy-oracle.js",
        "deploy:tip-3-deployer": "node scripts/contracts/tip3Deployer/scripts/deploy-TIP-3-deployer.js",
        "deploy:user-account-manager": "node scripts/contracts/userAccount/scripts/deploy-user-account-manager.js",
        "deploy:wallet-controller": "node scripts/contracts/walletController/scripts/deploy-wallet-controller.js",
        "deploy:test-swap-pair": "node scripts/contracts/oracle/scripts/deploy-test-swap-pair.js",

        "get:market-full-info": "node scripts/contracts/marketAggregator/scripts/get-full-info.js",
        "get:modules-info": "node scripts/contracts/marketModules/scripts/get-module-info.js",
        "get:user-account-manager": "node scripts/contracts/userAccount/scripts/get-uam-info.js",
        "get:wallet-controller": "node scripts/contracts/walletController/scripts/get-info.js",
        "get:oracle": "node scripts/contracts/oracle/scripts/get-oracle-info.js",

        "setup:market": "node ./scripts/contracts/marketAggregator/scripts/setup-contract-addresses.js",
        "setup:modules": "node ./scripts/contracts/marketModules/scripts/setup-modules.js",
        "setup:tip-3-deployer": "node ./scripts/contracts/tip3Deployer/scripts/setup-TIP-3-deployer.js",
        "setup:user-account-manager-addresses": "node ./scripts/contracts/userAccount/scripts/setup-contract-addresses.js",
        "setup:wallet-controller": "node ./scripts/contracts/walletController/scripts/setup-contract-addresses.js",
        "setup:test-swap-pair": "node ./scripts/contracts/oracle/scripts/set-test-price.js",

        "run:oracle-add-token": "node ./scripts/contracts/oracle/scripts/oracle-add-token.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/SVOIcom/TON-Lend.git"
    },
    "keywords": [
        "Free-TON",
        "TON-Lend",
        "lending"
    ],
    "author": "Paul Mikhaylov",
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/SVOIcom/TON-Lend/issues"
    },
    "homepage": "https://github.com/SVOIcom/TON-Lend#readme"
}
